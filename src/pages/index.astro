---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Atiquzzaman Soikat - Senior Full Stack Developer">
    <!-- Hero Section with Particles Background -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
        <!-- Floating Particles Background -->
        <div class="particle-container absolute inset-0 pointer-events-none"></div>
        
        <!-- Background Gradient -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-teal-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900"></div>
        
        <!-- Hero Content -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
            <div class="text-center">
                <!-- Profile Image with Glow Effect -->
                <div class="mb-8 animate-slideUp">
                    <div class="relative inline-block">
                        <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-teal-500 rounded-full opacity-20 blur-xl transform scale-110 animate-pulse-slow"></div>
                        <img
                            src="https://res.cloudinary.com/theazs/image/upload/w_1000,ar_1:1,c_fill,g_auto,e_art:hokusai/v1745151420/personal-website/E62A0787-01_fwd5qy.jpg"
                            alt="Atiquzzaman Soikat"
                            class="hero-headshot relative w-48 h-48 md:w-64 md:h-64 rounded-full mx-auto object-cover border-4 border-white dark:border-gray-700 shadow-2xl transition-all duration-300 hover:shadow-glow"
                        />
                    </div>
                </div>

                <!-- Animated Title -->
                <div class="mb-6 animate-slideUp" style="animation-delay: 0.2s;">
                    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-4 text-gray-900 dark:text-gray-100">
                        Hi, I'm <span class="typing-animation gradient-text">Atiquzzaman Soikat</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 font-medium mb-8">
                        Senior Full Stack Developer | Frontend Architect | Team Lead
                    </p>
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-slideUp" style="animation-delay: 0.4s;">
                    <a
                        href="https://www.linkedin.com/in/atiquzzaman-soikat/"
                        class="btn-primary inline-flex items-center px-8 py-4 text-lg font-semibold rounded-lg transition-all duration-300"
                        aria-label="Connect on LinkedIn"
                    >
                        <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                        </svg>
                        Connect on LinkedIn
                    </a>
                    <a
                        href="/resume.pdf"
                        class="btn-secondary inline-flex items-center px-8 py-4 text-lg font-semibold rounded-lg transition-all duration-300"
                        aria-label="View Resume"
                    >
                        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        View Resume
                    </a>
                </div>

                <!-- Quick Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 animate-slideUp" style="animation-delay: 0.6s;">
                    <div class="glass-effect rounded-lg p-6 text-center">
                        <div class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">12+</div>
                        <div class="text-gray-600 dark:text-gray-300">Years Experience</div>
                    </div>
                    <div class="glass-effect rounded-lg p-6 text-center">
                        <div class="text-3xl font-bold text-teal-600 dark:text-teal-400 mb-2">50+</div>
                        <div class="text-gray-600 dark:text-gray-300">Projects Completed</div>
                    </div>
                    <div class="glass-effect rounded-lg p-6 text-center">
                        <div class="text-3xl font-bold text-orange-600 dark:text-orange-400 mb-2">5+</div>
                        <div class="text-gray-600 dark:text-gray-300">Technologies Mastered</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
        </div>
    </section>

    <!-- About Section -->
    <section class="py-20 bg-white dark:bg-gray-900">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                    About Me
                </h2>
                <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-teal-500 mx-auto rounded-full"></div>
            </div>

            <div class="space-y-6 text-lg text-gray-700 dark:text-gray-300 leading-relaxed scroll-animate">
                <p>
                    I am a software developer with more than <span class="font-semibold text-primary-600 dark:text-primary-400">twelve years of experience</span> focused on web technologies. My career has spanned diverse sectors, including education, hospitality, and most recently, retail. While my primary expertise lies in frontend development, I have progressively transitioned towards full-stack development and am actively cultivating expertise in DevOps.
                </p>
                
                <p>
                    <span class="tech-highlight">JavaScript</span> has been my primary programming language throughout my career, complemented by experience in <span class="tech-highlight">TypeScript</span>, <span class="tech-highlight">PHP</span>, <span class="tech-highlight">Python</span>, <span class="tech-highlight">Ruby</span>, and <span class="tech-highlight">Java</span>. While I've extensively worked with <span class="tech-highlight">React</span> and <span class="tech-highlight">Vue.js</span>, <span class="tech-highlight">Svelte</span> has emerged as my preferred frontend framework over the past few years, thanks to its elegant approach to UI development and exceptional developer experience.
                </p>
                
                <p>
                    Beyond coding, I maintain a balanced life through gaming, cooking, and quality time with friends and family. I believe that a well-rounded perspective outside of technology makes me a better developer and collaborator.
                </p>
            </div>

            <!-- Featured CTA Section -->
            <div class="mt-16 scroll-animate">
                <div class="bg-gradient-to-br from-primary-500 via-teal-500 to-primary-600 rounded-2xl p-8 text-white text-center shadow-2xl">
                    <h3 class="text-2xl md:text-3xl font-bold mb-4">
                        Have an idea? Let's build something amazing together!
                    </h3>
                    <p class="text-lg mb-6 text-primary-100">
                        I can help you create an MVP in just <span class="font-bold">three weeks</span>
                    </p>
                    <a
                        href="/contact"
                        class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-bold rounded-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105"
                    >
                        Get Started Today
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Load hero animations -->
    <script type="module">
        // Hero animations initialization
        class HeroAnimations {
            constructor() {
                this.init();
            }

            init() {
                // Check for reduced motion preference
                const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                
                if (!prefersReducedMotion) {
                    this.initTypingAnimation();
                    this.initParticles();
                    this.initScrollAnimations();
                }
                
                this.initButtonInteractions();
                this.initHeadshotGlow();
            }

            initTypingAnimation() {
                const typingElements = document.querySelectorAll('.typing-animation');
                
                typingElements.forEach(element => {
                    const text = element.textContent;
                    element.textContent = '';
                    element.style.borderRight = '3px solid currentColor';
                    
                    let i = 0;
                    const typeWriter = () => {
                        if (i < text.length) {
                            element.textContent += text.charAt(i);
                            i++;
                            setTimeout(typeWriter, 100);
                        } else {
                            // Remove cursor after typing is complete
                            setTimeout(() => {
                                element.style.borderRight = 'none';
                            }, 1000);
                        }
                    };
                    
                    // Start typing animation after a short delay
                    setTimeout(typeWriter, 500);
                });
            }

            initParticles() {
                const particleContainer = document.querySelector('.particle-container');
                if (!particleContainer) return;

                // Create floating particles
                for (let i = 0; i < 10; i++) {
                    const particle = document.createElement('div');
                    particle.classList.add('particle');
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = Math.random() * 6 + 's';
                    particle.style.animationDuration = (Math.random() * 3 + 3) + 's';
                    particleContainer.appendChild(particle);
                }
            }

            initScrollAnimations() {
                const observerOptions = {
                    threshold: 0.1,
                    rootMargin: '0px 0px -50px 0px'
                };

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('animate-fadeIn');
                        }
                    });
                }, observerOptions);

                // Observe elements with scroll animation
                document.querySelectorAll('.scroll-animate').forEach(el => {
                    observer.observe(el);
                });
            }

            initButtonInteractions() {
                const buttons = document.querySelectorAll('.btn-primary, .btn-secondary');
                
                buttons.forEach(button => {
                    button.addEventListener('mouseenter', () => {
                        button.style.transform = 'scale(1.05) translateY(-2px)';
                        button.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.2)';
                    });
                    
                    button.addEventListener('mouseleave', () => {
                        button.style.transform = 'scale(1) translateY(0)';
                        button.style.boxShadow = '0 4px 15px rgba(0, 0, 0, 0.1)';
                    });
                });
            }

            initHeadshotGlow() {
                const headshot = document.querySelector('.hero-headshot');
                if (!headshot) return;

                headshot.addEventListener('mouseenter', () => {
                    headshot.style.boxShadow = '0 0 30px rgba(139, 92, 246, 0.4)';
                    headshot.style.transform = 'scale(1.02)';
                });

                headshot.addEventListener('mouseleave', () => {
                    headshot.style.boxShadow = '0 4px 15px rgba(0, 0, 0, 0.1)';
                    headshot.style.transform = 'scale(1)';
                });
            }
        }

        // Initialize animations when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new HeroAnimations();
        });
    </script>

    <style>
        .tech-highlight {
            @apply font-semibold;
            background: var(--hero-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .scroll-animate {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }
        
        .scroll-animate.animate-fadeIn {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Ensure animations respect reduced motion preferences */
        @media (prefers-reduced-motion: reduce) {
            .animate-slideUp,
            .animate-bounce,
            .animate-pulse-slow {
                animation: none !important;
            }
            
            .scroll-animate {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</MainLayout>
