---
// src/pages/about.astro
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="About Me - Atiquzzaman Soikat">
  <div class="mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <img src="/logo.svg" alt="Logo" class="w-8 h-8 mx-auto mb-4" />
      <h1 class="text-3xl font-bold mb-8">About Me</h1>
    </div>

    <div class="text-center mb-12">
      <p>
        I have over twelve years of experience in web development, serving as a
        Technical Project Manager, Frontend Engineer, and Team Lead for startups
        such as Jetaport, Butler Hospitality, and Skipper Hospitality.
        Additionally, I have worked as a freelancer, managing my own clients. My
        approach centers on inspiring teams to write clean, iterative, and
        maintainable code that aligns with real user experiences while achieving
        business objectives. In my own development work, I prioritize semantic,
        elegant, and maintainable code that is responsive and accessible.
      </p>
    </div>

    <div class="grid md:grid-cols-12 gap-8">
      <!-- Right Column - Experience & Education -->
      <div class="md:col-span-12">
        <!-- Job Experience -->
        <section class="mb-12">
          <h3 class="text-xl font-semibold mb-6">
            Job Experience (2012-Ongoing)
          </h3>
          <div class="relative">
            <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200"></div>

            {/* Timeline Items */}
            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-sm text-gray-500">2021-Present</div>
                <h4 class="font-medium">Chief Technology Officer</h4>
                <p class="text-gray-600">ReformedTech</p>
              </div>
            </div>
            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-sm text-gray-500">Sep. 2021 – Dec. 2024</div>
                <h4 class="font-medium">Senior Software Engineer/Team Lead</h4>
                <p class="text-gray-600">Skipper Hospitality, New York, USA</p>
              </div>
            </div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-sm text-gray-500">Aug. 2018 – July 2021</div>
                <h4 class="font-medium">Senior Frontend Engineer/Team Lead</h4>
                <p class="text-gray-600">Butler Hospitality, New York, USA</p>
              </div>
            </div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-sm text-gray-500">Nov. 2015 – Apr. 2018</div>
                <h4 class="font-medium">Frontend Developer</h4>
                <p class="text-gray-600">Jetaport/Skipper, New York, USA</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Education -->
        <section class="mb-12">
          <h3 class="text-xl font-semibold mb-6">Education</h3>
          <div class="relative">
            <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200"></div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-sm text-gray-500">2008-2012</div>
                <h4 class="font-medium">BSC In Engineering</h4>
                <p class="text-gray-600">
                  American International University - AIUB
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Expertise -->
        <section>
          <h3 class="text-xl font-semibold mb-6">Expertise</h3>

          <div class="grid md:grid-cols-2 gap-8">
            <!-- Leadership Skills -->
            <div class="bg-gray-50 p-6 rounded-lg mb-8">
              <h4 class="mb-4 text-black font-bold">
                Leadership & Management
              </h4>
              <ul class="grid md:grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Team Leadership
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Project Management
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Agile Methodologies
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Team Mentoring
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Code Review
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Sprint Planning
                </li>
              </ul>
            </div>
            <!-- Programming Languages -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="mb-4 text-black font-bold">
                Programming Languages
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>JavaScript
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>TypeScript
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"></span>PHP
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Python
                </li>
              </ul>
            </div>

            <!-- Frontend Frameworks -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black">
                Frontend Frameworks
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>React.js
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Next.js
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Vue.js
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Svelte
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Angular
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Ember.js
                </li>
              </ul>
            </div>

            <!-- Backend & Databases -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black">
                Backend & Databases
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Node.js
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Express.js
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>MySQL
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>PostgreSQL
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>MongoDB
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Firebase
                </li>
              </ul>
            </div>

            <!-- DevOps & Cloud -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black">DevOps & Cloud</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"></span>AWS
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Docker
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Vitest
                </li>
              </ul>
            </div>

            <!-- CMS & Frameworks -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black">CMS & Frameworks</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Laravel
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>WordPress
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Shopify
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>ERPNext
                </li>
              </ul>
            </div>
            <!-- Jamstack -->
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black">Jamstack</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Astro
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Strapi
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>11ty
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 rounded-full mr-2"
                  ></span>Hugo
                </li>
              </ul>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</MainLayout>
