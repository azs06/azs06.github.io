        <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200 dark:bg-gray-700"></div>

        <div class="relative pl-8">
          <div class="absolute left-0 top-1.5 w-2.5 h-2.5 bg-brandingColor rounded-full -translate-x-1"></div>
          <div class="bg-white dark:bg-gray-800 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:shadow transition-shadow">
            <div class="text-sm text-gray-500 dark:text-gray-400">2008-2012</div>
            <h3 class="font-semibold text-xl text-gray-900 dark:text-gray-100">BSC In Computer Science And Engineering</h3>
            <p class="text-gray-700 dark:text-gray-300">
              American International University - AIUB
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Expertise -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">Expertise</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Leadership Skills -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border border-gray-200 dark:border-gray-700 hover:shadow transition-shadow">
          <h3 class="mb-4 text-gray-900 dark:text-gray-100 font-semibold text-lg">
            Leadership & Management
          </h3>
          <ul class="space-y-2">
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-brandingColor dark:bg-teal-400 rounded-full flex-shrink-0"></span>
              <span class="text-gray-700 dark:text-gray-300">Team Leadership</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-brandingColor dark:bg-teal-400 rounded-full flex-shrink-0"></span>
              <span class="text-gray-700 dark:text-gray-300">Project Management</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-brandingColor dark:bg-teal-400 rounded-full flex-shrink-0"></span>
              <span class="text-gray-700 dark:text-gray-300">Agile Methodologies</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-brandingColor dark:bg-teal-400 rounded-full flex-shrink-0"></span>
