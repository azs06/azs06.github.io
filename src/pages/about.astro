---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="About Me - Atiquzzaman Soikat">
    <div class="max-w-6xl mx-auto px-4 py-12">
        <!-- Header -->
        <div class="text-center mb-12">
            <img src="/logo.svg" alt="Logo" class="w-8 h-8 mx-auto mb-4" />
            <h1 class="text-3xl font-bold mb-8">About Me</h1>
        </div>

        <div class="grid md:grid-cols-12 gap-8">
            <!-- Left Column - Profile -->
            <div class="md:col-span-4 bg-white p-6 rounded-lg shadow-sm">
                <img 
                    src="https://avatars.githubusercontent.com/u/1593663?v=4" 
                    alt="Atiquzzaman Soikat" 
                    class="w-full rounded-lg mb-6"
                />
                <h2 class="text-xl font-semibold mb-2">Atiquzzaman Soikat</h2>
                <p class="text-gray-600 mb-4">Software Engineer</p>
                <p class="text-gray-600 text-sm mb-6">
                    Hello! For over a decade, I've helped businesses to craft honest, emotional experiences through interplay, brand development, graphic design, and web design.
                </p>
                
                <!-- Social Links -->
                <div class="flex gap-4">
                    <a href="https://linkedin.com" class="p-2 bg-blue-600 text-white rounded-full hover:bg-blue-700">
                        <span class="sr-only">LinkedIn</span>
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                        </svg>
                    </a>
                    <!-- Add other social icons similarly -->
                </div>
            </div>

            <!-- Right Column - Experience & Education -->
            <div class="md:col-span-8">
                <!-- Job Experience -->
                <section class="mb-12">
                    <h3 class="text-xl font-semibold mb-6">Job Experience (2009-Ongoing)</h3>
                    <div class="relative">
                        <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200"></div>
                        
                        {/* Timeline Items */}
                        <div class="relative pl-8 pb-8">
                            <div class="absolute left-0 w-2 h-2 bg-blue-500 rounded-full -translate-x-0.5"></div>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="text-sm text-gray-500">2019-Present</div>
                                <h4 class="font-medium">Chief Technology Officer</h4>
                                <p class="text-gray-600">ReformedTech</p>
                            </div>
                        </div>
                        
                        {/* Repeat similar blocks for other experiences */}
                    </div>
                </section>

                <!-- Education -->
                <section class="mb-12">
                    <h3 class="text-xl font-semibold mb-6">Educations</h3>
                    <div class="relative">
                        <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200"></div>
                        
                        <div class="relative pl-8 pb-8">
                            <div class="absolute left-0 w-2 h-2 bg-blue-500 rounded-full -translate-x-0.5"></div>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="text-sm text-gray-500">2012-2016</div>
                                <h4 class="font-medium">BSC Engineering</h4>
                                <p class="text-gray-600">American International University- AIUB</p>
                            </div>
                        </div>
                        
                        {/* Repeat for other education items */}
                    </div>
                </section>

                <!-- Professional Services -->
                <section class="mb-12">
                    <h3 class="text-xl font-semibold mb-6">Professional Services</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="font-medium mb-2">Websites & platforms</h4>
                        </div>
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="font-medium mb-2">Mobile applications</h4>
                        </div>
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="font-medium mb-2">Design conspect</h4>
                        </div>
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="font-medium mb-2">Strategy & branding</h4>
                        </div>
                    </div>
                </section>

                <!-- Expertise -->
                <section>
                    <h3 class="text-xl font-semibold mb-6">Expertise</h3>
                    <div class="grid grid-cols-4 gap-6">
                        <div class="flex flex-col items-center">
                            <img src="/icons/html5.svg" alt="HTML5" class="w-12 h-12 mb-2" />
                            <span class="text-sm">HTML5</span>
                        </div>
                        <div class="flex flex-col items-center">
                            <img src="/icons/css3.svg" alt="CSS3" class="w-12 h-12 mb-2" />
                            <span class="text-sm">CSS3</span>
                        </div>
                        <!-- Add other technology icons similarly -->
                    </div>
                </section>
            </div>
        </div>
    </div>
</MainLayout>