---
// src/pages/about.astro
import MainLayout from "../layouts/MainLayout.astro";
import LayoutHeader from "../components/LayoutHeader.astro";
---

<MainLayout title="About Me - Atiquzzaman Soikat">
  <section class="mx-auto px-4 py-12">
    <!-- Header -->
    <LayoutHeader title="About Me" />

    <div class="text-center mb-12">
      <p class="text-gray-800 dark:text-gray-200">
        I have over twelve years of experience in web development, serving as a
        Technical Project Manager, Frontend Engineer, and Team Lead for startups
        such as Jetaport, Butler Hospitality, and Skipper Hospitality.
        Additionally, I have worked as a freelancer, managing my own clients. My
        approach centers on inspiring teams to write clean, iterative, and
        maintainable code that aligns with real user experiences while achieving
        business objectives. In my own development work, I prioritize semantic,
        elegant, and maintainable code that is responsive and accessible.
      </p>
    </div>

    <div class="grid md:grid-cols-12 gap-8">
      <!-- Right Column - Experience & Education -->
      <div class="md:col-span-12">
        <!-- Job Experience -->
        <section class="mb-12">
          <h3 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100">
            Job Experience (2012-Ongoing)
          </h3>
          <div class="relative">
            <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200 dark:bg-gray-600"></div>

            {/* Timeline Items */}
            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black dark:bg-gray-300 rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <div class="text-sm text-gray-500 dark:text-gray-400">2021-Present</div>
                <h4 class="font-semibold text-xl text-gray-900 dark:text-gray-100">Chief Technology Officer</h4>
                <p class="text-gray-600 dark:text-gray-300">ReformedTech</p>
              </div>
            </div>
            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black dark:bg-gray-300 rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <div class="text-sm text-gray-500 dark:text-gray-400">Sep. 2021 – Dec. 2024</div>
                <h4 class="font-semibold text-xl text-gray-900 dark:text-gray-100">Senior Software Engineer/Team Lead</h4>
                <p class="text-gray-600 dark:text-gray-300">Skipper Hospitality, New York, USA</p>
              </div>
            </div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black dark:bg-gray-300 rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <div class="text-sm text-gray-500 dark:text-gray-400">Aug. 2018 – July 2021</div>
                <h4 class="font-semibold text-xl text-gray-900 dark:text-gray-100">Senior Frontend Engineer/Team Lead</h4>
                <p class="text-gray-600 dark:text-gray-300">Butler Hospitality, New York, USA</p>
              </div>
            </div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black dark:bg-gray-300 rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <div class="text-sm text-gray-500 dark:text-gray-400">Nov. 2015 – Apr. 2018</div>
                <h4 class="font-semibold text-xl text-gray-900 dark:text-gray-100">Frontend Developer</h4>
                <p class="text-gray-600 dark:text-gray-300">Jetaport/Skipper, New York, USA</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Education -->
        <section class="mb-12">
          <h3 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100">Education</h3>
          <div class="relative">
            <div class="absolute left-0 top-0 h-full w-0.5 bg-gray-200 dark:bg-gray-600"></div>

            <div class="relative pl-8 pb-8">
              <div
                class="absolute left-0 w-2 h-2 bg-black dark:bg-gray-300 rounded-full -translate-x-0.5"
              >
              </div>
              <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <div class="text-sm text-gray-500 dark:text-gray-400">2008-2012</div>
                <h4 class="font-semibold text-xl text-gray-900 dark:text-gray-100">BSC In Computer Science And Engineering</h4>
                <p class="text-gray-600 dark:text-gray-300">
                  American International University - AIUB
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Expertise -->
        <section>
          <h3 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100">Expertise</h3>

          <div class="grid md:grid-cols-2 gap-8">
            <!-- Leadership Skills -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg mb-8">
              <h4 class="mb-4 text-black dark:text-gray-100 font-bold">
                Leadership & Management
              </h4>
              <ul class="grid md:grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Team Leadership</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Project Management</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Agile Methodologies</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Team Mentoring</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Code Review</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Sprint Planning</span>
                </li>
              </ul>
            </div>
            <!-- Programming Languages -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="mb-4 text-black dark:text-gray-100 font-bold">
                Programming Languages
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">JavaScript</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">TypeScript</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"></span><span class="text-gray-700 dark:text-gray-300">PHP</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Python</span>
                </li>
              </ul>
            </div>

            <!-- Frontend Frameworks -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black dark:text-gray-100">
                Frontend Frameworks
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">React.js</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Next.js</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Vue.js</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Svelte</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Angular</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Ember.js</span>
                </li>
              </ul>
            </div>

            <!-- Backend & Databases -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black dark:text-gray-100">
                Backend & Databases
              </h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Node.js</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Express.js</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">MySQL</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">PostgreSQL</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">MongoDB</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Firebase</span>
                </li>
              </ul>
            </div>

            <!-- DevOps & Cloud -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black dark:text-gray-100">DevOps & Cloud</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"></span><span class="text-gray-700 dark:text-gray-300">AWS</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Docker</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Vitest</span>
                </li>
              </ul>
            </div>

            <!-- CMS & Frameworks -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black dark:text-gray-100">CMS & Frameworks</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Laravel</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">WordPress</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Shopify</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">ERPNext</span>
                </li>
              </ul>
            </div>
            <!-- Jamstack -->
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
              <h4 class="font-bold mb-4 text-black dark:text-gray-100">Jamstack</h4>
              <ul class="grid grid-cols-2 gap-2">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Astro</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Strapi</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">11ty</span>
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-gray-500 dark:bg-gray-400 rounded-full mr-2"
                  ></span><span class="text-gray-700 dark:text-gray-300">Hugo</span>
                </li>
              </ul>
            </div>
          </div>
        </section>
      </div>
    </div>
  </section>
</MainLayout>
