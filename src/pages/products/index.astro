---
import MainLayout from "../../layouts/MainLayout.astro";
import { SAAS_PRODUCTS } from "../../consts";
---

<MainLayout>
  <div class="space-y-12">
    <!-- Page Header -->
    <header class="section-animate space-y-4">
      <h1
        class="text-4xl md:text-5xl font-bold text-primary dark:text-gray-100 font-serif"
      >
        Products
      </h1>
      <p class="text-lg text-primary/80 dark:text-gray-300 leading-relaxed max-w-2xl">
        Explore the digital products I've built to solve real-world problems
        for businesses and individuals.
      </p>
    </header>

    <!-- Products Grid -->
    <section class="section-animate">
      <div class="grid gap-6 md:grid-cols-2">
        {
          SAAS_PRODUCTS.map((product, index) => (
            <a
              href={`/products/${product.slug}`}
              class="stagger-item card-lift group block p-6 border border-border dark:border-[#3d352d] rounded-lg bg-paper/50 dark:bg-[#2a2520]/50 hover:border-accent/50 dark:hover:border-accent/50 space-y-3"
              style={`animation-delay: ${index * 0.05}s`}
            >
              <div class="flex items-start justify-between gap-3">
                <h2 class="text-xl font-medium text-primary dark:text-gray-100 group-hover:text-accent dark:group-hover:text-accent transition-colors font-serif">
                  {product.name}
                </h2>
                {product.url !== "#" && (
                  <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-accent dark:text-accent border border-accent/30 dark:border-accent/30 rounded-full">
                    Live
                  </span>
                )}
                {product.url === "#" && (
                  <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-muted dark:text-gray-400 border border-border dark:border-[#3d352d] rounded-full">
                    Coming Soon
                  </span>
                )}
              </div>
              <p class="text-sm text-muted dark:text-gray-400">
                {product.description}
              </p>
              <div class="flex items-center gap-2 text-sm text-accent dark:text-accent font-medium pt-2">
                <span>Learn more</span>
                <svg
                  class="w-4 h-4 transition-transform group-hover:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <!-- Call to Action -->
    <section class="section-animate">
      <div class="p-8 md:p-12 border border-border dark:border-[#3d352d] rounded-lg bg-paper/30 dark:bg-[#2a2520]/30 text-center space-y-4">
        <h2
          class="text-2xl md:text-3xl font-bold text-primary dark:text-gray-100 font-serif"
        >
          Interested in working together?
        </h2>
        <p class="text-lg text-primary/80 dark:text-gray-300 max-w-xl mx-auto">
          I'm always open to new opportunities and collaborations. Let's build
          something great together.
        </p>
        <div class="flex justify-center gap-3 pt-2">
          <a
            href="/contact"
            class="btn-press inline-flex items-center px-6 py-3 text-base font-medium text-white bg-accent dark:bg-accent rounded-lg hover:bg-accent/90 transition-colors"
          >
            Get in Touch
          </a>
          <a
            href="/work"
            class="btn-press inline-flex items-center px-6 py-3 text-base font-medium text-primary dark:text-gray-200 border border-border dark:border-[#3d352d] rounded-lg hover:border-accent dark:hover:border-accent transition-colors"
          >
            View My Work
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
