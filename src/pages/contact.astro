---
// src/pages/contact.astro
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact - Atiquzzaman Soikat">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <img src="/logo.svg" alt="Logo" class="w-8 h-8 mx-auto mb-4" />
      <h1 class="text-4xl font-bold mb-8">Contact</h1>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Left Column - Profile Image -->
      <div>
        <img
          src="/profile-large.jpg"
          alt="Atiquzzaman Soikat"
          class="w-full rounded-lg shadow-lg"
        />
      </div>

      <!-- Right Column - Contact Form -->
      <div class="bg-gray-50 p-8 rounded-lg">
        <h2 class="text-2xl font-semibold mb-6">GET IN TOUCH</h2>

        <!-- Social Links -->
        <div class="flex gap-4 mb-8">
          <a
            href="https://linkedin.com"
            class="p-2 bg-[#0077b5] text-white rounded-full hover:opacity-90"
          >
            <span class="sr-only">LinkedIn</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
          <a
            href="https://facebook.com"
            class="p-2 bg-[#1877f2] text-white rounded-full hover:opacity-90"
          >
            <span class="sr-only">Facebook</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
              ></path>
            </svg>
          </a>
          <a
            href="https://instagram.com"
            class="p-2 bg-[#e4405f] text-white rounded-full hover:opacity-90"
          >
            <span class="sr-only">Instagram</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
              ></path>
            </svg>
          </a>
          <a
            href="https://twitter.com"
            class="p-2 bg-[#1da1f2] text-white rounded-full hover:opacity-90"
          >
            <span class="sr-only">Twitter</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
              ></path>
            </svg>
          </a>
        </div>

        <!-- Contact Info -->
        <div class="grid grid-cols-2 gap-4 mb-8">
          <div class="p-4 bg-white rounded-lg text-center">
            <svg
              class="w-6 h-6 mx-auto mb-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href="mailto:atik.aiub@gmail.com"
              class="text-gray-600 hover:text-gray-900"
            >
              atik.aiub@gmail.com
            </a>
          </div>
          <div class="p-4 bg-white rounded-lg text-center">
            <svg
              class="w-6 h-6 mx-auto mb-2"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 0a12 12 0 1012 12A12.013 12.013 0 0012 0zm6.927 8.2l-6.845 9.289a1.011 1.011 0 01-1.43.188l-4.888-3.908a1 1 0 111.25-1.562l4.076 3.261 6.227-8.451a1 1 0 111.61 1.183z"
              ></path>
            </svg>
            <a
              href="skype:atik.aiub.skype"
              class="text-gray-600 hover:text-gray-900"
            >
              atik.aiub.skype
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <form class="space-y-6" action="#" method="POST">
          <div>
            <input
              type="text"
              name="name"
              placeholder="Name"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500"
            />
          </div>
          <div>
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500"
            />
          </div>
          <div>
            <textarea
              name="message"
              placeholder="Message"
              rows="4"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500"
            ></textarea>
          </div>
          <button
            type="submit"
            class="bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  // Add client-side form handling if needed
  document.querySelector("form").addEventListener("submit", async (e) => {
    e.preventDefault();
    // Add your form submission logic here
  });
</script>
