---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaUrl?: string;
}

const {
  title,
  description,
  ctaText = "Get Started",
  ctaUrl = "#",
} = Astro.props;
---

<section class="section-animate">
  <div
    class="p-8 md:p-12 border border-border dark:border-[#3d352d] rounded-lg bg-paper/30 dark:bg-[#2a2520]/30 text-center space-y-6"
  >
    <h2 class="text-2xl md:text-3xl font-bold text-primary dark:text-gray-100 font-serif">
      {title}
    </h2>
    <p class="text-lg text-primary/80 dark:text-gray-300 max-w-2xl mx-auto">
      {description}
    </p>
    <div class="flex justify-center">
      <a
        href={ctaUrl}
        target={ctaUrl.startsWith("http") ? "_blank" : undefined}
        rel={ctaUrl.startsWith("http") ? "noopener noreferrer" : undefined}
        class="btn-press inline-flex items-center px-6 py-3 text-base font-medium text-white bg-accent dark:bg-accent rounded-lg hover:bg-accent/90 transition-colors"
      >
        {ctaText}
        {
          ctaUrl.startsWith("http") && (
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
          )
        }
      </a>
    </div>
  </div>
</section>
