---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="bg-paper/90 dark:bg-[#1f1b18]/90 backdrop-blur-md border-b border-border dark:border-[#3d352d] p-4 sticky top-0 z-50">
  <nav class="flex flex-wrap items-center justify-between max-w-6xl mx-auto">
    <div class="flex items-center space-x-2">
      <img src="/logo-black.svg" alt="Logo" class="w-8 h-8 dark:hidden" />
      <img src="/logo-white.svg" alt="Logo" class="w-8 h-8 hidden dark:block" />
      <h2 class="text-lg font-semibold text-primary dark:text-gray-100 font-serif">
        <a href="/">{SITE_TITLE}</a>
      </h2>
    </div>
    <div
      id="menu"
      class="hidden z-10 md:flex flex-auto flex-col justify-between md:flex-row space-y-4 md:space-y-0 md:space-x-4 absolute md:relative top-16 md:top-auto left-0 md:left-auto bg-paper dark:bg-[#1f1b18] md:bg-transparent md:dark:bg-transparent w-full md:w-auto border-b md:border-0 border-border dark:border-[#3d352d] p-4 md:p-0"
    >
      <div class="flex space-x-4 md:ml-auto">
        <ul class="inline header-menu">
          <li>
            <HeaderLink
              class={"hover:text-accent dark:hover:text-accent transition-colors"}
              href="/">Home</HeaderLink
            >
          </li>
          <li>
            <HeaderLink
              class={"hover:text-accent dark:hover:text-accent transition-colors"}
              href="/blog">Blog</HeaderLink
            >
          </li>
          <li>
            <HeaderLink
              class={"hover:text-accent dark:hover:text-accent transition-colors"}
              href="/work">Work</HeaderLink
            >
          </li>
          <li>
            <HeaderLink
              class={"hover:text-accent dark:hover:text-accent transition-colors"}
              href="/about">About</HeaderLink
            >
          </li>
        </ul>
      </div>

      <div class="flex items-center">
        <button
          id="dark-mode-toggle"
          class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 flex items-center justify-center p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          aria-label="Toggle dark mode"
        >
          <svg id="sun-icon" viewBox="0 0 24 24" aria-hidden="true" width="20" height="20" class="hidden dark:block">
            <path fill="currentColor" d="M12 18C8.68629 18 6 15.3137 6 12C6 8.68629 8.68629 6 12 6C15.3137 6 18 8.68629 18 12C18 15.3137 15.3137 18 12 18ZM12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12C8 14.2091 9.79086 16 12 16ZM11 1H13V4H11V1ZM11 20H13V23H11V20ZM3.51472 4.92893L4.92893 3.51472L7.05025 5.63604L5.63604 7.05025L3.51472 4.92893ZM16.9497 18.364L18.364 16.9497L20.4853 19.0711L19.0711 20.4853L16.9497 18.364ZM19.0711 3.51472L20.4853 4.92893L18.364 7.05025L16.9497 5.63604L19.0711 3.51472ZM5.63604 16.9497L7.05025 18.364L4.92893 20.4853L3.51472 19.0711L5.63604 16.9497ZM23 11V13H20V11H23ZM4 11V13H1V11H4Z"></path>
          </svg>
          <svg id="moon-icon" viewBox="0 0 24 24" aria-hidden="true" width="20" height="20" class="block dark:hidden">
            <path fill="currentColor" d="M10 7C10 10.866 13.134 14 17 14C18.9584 14 20.729 13.1957 21.9995 11.8995C22 11.933 22 11.9665 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C12.0335 2 12.067 2 12.1005 2.00049C10.8043 3.27098 10 5.04157 10 7ZM4 12C4 16.4183 7.58172 20 12 20C15.0583 20 17.7158 18.2839 19.062 15.7621C18.3945 15.9187 17.7035 16 17 16C12.0294 16 8 11.9706 8 7C8 6.29648 8.08133 5.60547 8.2379 4.938C5.71611 6.28423 4 8.9417 4 12Z"></path>
          </svg>
        </button>
      </div>
    </div>
    <button id="menu-toggle" class="md:hidden text-gray-700 dark:text-gray-300"> â˜° </button>
  </nav>
</header>

<style>
  @media screen and (min-width: 768px) {
    .header-menu li {
      display: inline;
    }
  }
  .header-menu li {
    padding: 0.5em;
  }
</style>
<script>
  const menuToggle = document.getElementById("menu-toggle");
  const menu = document.getElementById("menu");
  
  if (menuToggle && menu) {
    menuToggle.addEventListener("click", function () {
      menu.classList.toggle("hidden");
    });
  }

  // Dark mode toggle functionality
  const darkModeToggle = document.getElementById("dark-mode-toggle");
  const html = document.documentElement;
  const mediaQuery = window.matchMedia("(prefers-color-scheme: dark)");
  
  // Function to apply theme
  function applyTheme(theme) {
    if (theme === "dark") {
      html.classList.add("dark");
    } else {
      html.classList.remove("dark");
    }
  }
  
  // Function to get current theme preference
  function getThemePreference() {
    const savedTheme = localStorage.getItem("theme");
    if (savedTheme === "dark" || savedTheme === "light") {
      return savedTheme;
    }
    // No stored preference, fallback to system
    return mediaQuery.matches ? "dark" : "light";
  }
  
  // Apply initial theme
  const currentTheme = getThemePreference();
  applyTheme(currentTheme);
  
  // Listen for system theme changes
  mediaQuery.addEventListener("change", function(e) {
    const savedTheme = localStorage.getItem("theme");
    // Only react to system changes if the user has no manual preference saved
    if (!savedTheme) {
      applyTheme(e.matches ? "dark" : "light");
    }
  });
  
  // Toggle button functionality
  if (darkModeToggle) {
    darkModeToggle.addEventListener("click", function () {
      const appliedTheme = html.classList.contains("dark") ? "dark" : "light";
      const newTheme = appliedTheme === "dark" ? "light" : "dark";
      localStorage.setItem("theme", newTheme);
      applyTheme(newTheme);
    });
  }
</script>
