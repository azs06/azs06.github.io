<script>
// set up text to print, each item in array is new line
const designations = ['Web Developer', 'Software Engineer', 'JavaScript Engineer', 'Frontend Engineer', 'UI Engineer']
const toUseDesignation = designations[Math.round(Math.random()* designations.length)];
const designationEl = document.getElementById('designation');
if(designationEl){
  designationEl.innerHTML = toUseDesignation;
}
var aText = new Array(
toUseDesignation,
 'Lifelong learner, Opensource Developer, Content Creatror',
);
var iSpeed = 100; // time delay of print out
var iIndex = 0; // start printing array at this posision
var iArrLength = aText[0].length; // the length of the text array
var iScrollAt = 20; // start scrolling up at this many lines
 
var iTextPos = 0; // initialise text position
var sContents = ''; // initialise contents variable
var iRow; // initialise current row
 
function typewriter(destination){
 sContents =  ' ';
 iRow = Math.max(0, iIndex-iScrollAt);
 
 while ( iRow < iIndex ) {
  sContents += aText[iRow++] + '<br />';
 }
 destination.innerHTML = sContents + aText[iIndex].substring(0, iTextPos) + "_";
 if ( iTextPos++ == iArrLength ) {
  iTextPos = 0;
  iIndex++;
  if ( iIndex != aText.length ) {
   iArrLength = aText[iIndex].length;
   setTimeout(() => {
    typewriter(destination);
   }, 500);
  }
 } else {
  setTimeout(() => {
    typewriter(destination);
  }, iSpeed);
 }
}
typewriter(document.getElementById('typedtext'));
</script>  